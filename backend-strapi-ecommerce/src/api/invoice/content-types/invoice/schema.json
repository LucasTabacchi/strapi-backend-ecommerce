{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "singularName": "invoice",
    "pluralName": "invoices",
    "displayName": "Invoice"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "number": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "issuedAt": {
      "type": "datetime",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "required": true,
      "default": "ARS"
    },
    "pdf": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["files"]
    }
  },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "invoices"
    }
  }