{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "items": {
      "type": "json",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "orderStatus": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "failed",
        "cancelled",
        "shipped",
        "delivered"
      ]
    },
    "orderNumber": {
      "type": "string",
      "unique": true
    },
    "mpPaymentId": {
      "type": "string"
    },
    "mpStatus": {
      "type": "string"
    },
    "mpStatusDetail": {
      "type": "string"
    },
    "mpMerchantOrderId": {
      "type": "string"
    },
    "mpExternalReference": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "shippingAddress": {
      "type": "json"
    },
    "stockAdjusted": {
      "type": "boolean",
      "default": false
    }
  }
}
