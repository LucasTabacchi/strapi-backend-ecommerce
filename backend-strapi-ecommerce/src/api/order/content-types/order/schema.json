{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "items": {
      "type": "json",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true
    },

    "shippingMethod": {
      "type": "enumeration",
      "required": true,
      "default": "delivery",
      "enum": ["delivery", "pickup"]
    },
    "shippingCost": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "pickupPoint": {
      "type": "string"
    },

    "orderStatus": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": ["pending", "paid", "failed", "cancelled", "shipped", "delivered"]
    },
    "orderNumber": {
      "type": "string",
      "unique": true
    },
    "mpPaymentId": {
      "type": "string"
    },
    "mpStatus": {
      "type": "string"
    },
    "mpStatusDetail": {
      "type": "string"
    },
    "mpMerchantOrderId": {
      "type": "string"
    },
    "mpExternalReference": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "dni": {
      "type": "string",
      "minLength": 7,
      "maxLength": 10
    },
    "shippingAddress": {
      "type": "json"
    },
    "stockAdjusted": {
      "type": "boolean",
      "default": false
    },
    "subtotal": {
      "type": "decimal"
    },
    "discountTotal": {
      "type": "decimal"
    },
    "coupon": {
      "type": "string"
    },
    "appliedPromotions": {
      "type": "json"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "invoiceGenerated": {
      "type": "boolean",
      "default": false
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "order"
    }
  }
}
